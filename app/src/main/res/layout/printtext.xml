<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

     <TextView
        android:id="@+id/msgtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Message :" >
    </TextView>

    <EditText
        android:id="@+id/entermessage"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/msgtext"
        android:text="" >
    </EditText>

    <Button
        android:id="@+id/printDirectly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/printingButton"
        android:layout_below="@+id/printingButton"
        android:layout_marginTop="18dp"
        android:text="Print_Directly" />

    <Button
        android:id="@+id/printingButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/entermessage"
        android:layout_below="@+id/entermessage"
        android:layout_marginTop="20dp"
        android:text="Print" />

</LinearLayout>