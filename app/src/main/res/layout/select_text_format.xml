<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Select_First_Font"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_dark" />

    <Spinner
        android:id="@+id/fontselection1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Select_Second_Font"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_dark" />

    <Spinner
        android:id="@+id/fontselection2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Select_FontStyle"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_dark" />

    <Spinner
        android:id="@+id/fontstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select_First_FontSize"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_dark" />

    <Spinner
        android:id="@+id/fontsize1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Select_Second_FontSize"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_dark" />

    <Spinner
        android:id="@+id/fontsize2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" />

    <Button
        android:id="@+id/set"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SET-FONT" />

</LinearLayout>